{
  "manifest_version": 3,
  "name": "Video AI Generator",
  "version": "1.0.0",
  "description": "Generate AI-powered Quiz and Q&A from any HTML5 video",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
